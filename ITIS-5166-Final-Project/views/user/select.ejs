<%- include('../partials/header.ejs')%>
    <div class = "container">
        <h2>Hi, <%= user.firstName %></h2>
        <% if(items.length) { %>
            <p>Please select an item to trade with.</p>
            <form>
                <table class="table table-hover">
                    <thead>
                        <tr>
                        <th scope="col"></th>
                        <th scope="col">Item</th>
                        <th scope="col">Category</th>
                        <th scope="col"></th>
                        </tr>
                    </thead>
                    <% let i = 1; %>
                    <% items.forEach(item => { %>
                        <tr>
                            <th scope="row"><input class="form-check-input" type="radio" name="item" value="<%= item.id %>"></th>
                            <td><%= item.name %></td>
                            <td><%= item.category %></td>
                            <% if(item.availability == true){ %>
                                <td>Available</td>
                            <% }else{ %>
                                <td>Offer Pending</td>
                            <% } %>
                        </tr>
                        <% i++; %>
                    <% }); %>
                </table>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        <% }else { %>
            <p>You have not put up any items for trade.</p>
        <% } %>
    </div>
    <%- include('../partials/footer.ejs')%>