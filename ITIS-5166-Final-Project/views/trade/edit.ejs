<%- include('../partials/header.ejs') %>
<main class="container">
            <form action="/trades/<%= item.id %>?_method=PUT" method='POST'>
                <div class="mb-3">
                  <label for="category">Category</label>
                  <input type="text" class="form-control" id="category" name="category" value="<%= item.category %>" required>
                </div>
                <div class="mb-3">
                    <label for="name">Item Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= item.name %>" required>
                  </div>
                  <div class="mb-3">
                    <label for="manufacturer">Manufacturer</label>
                    <input type="text" class="form-control" id="manufacturer" name="manufacturer" value="<%= item.manufacturer %>" required>
                  </div>
                  <div class="mb-3">
                    <label for="description">Description</label>
                    <input type="text" class="form-control" id="description" name="description" value="<%= item.description %>" required minlength="10">
                  </div>
                  <button class="btn btn-primary">Submit</button>
              </form>
        </div>
</main>
<%- include('../partials/footer.ejs') %>