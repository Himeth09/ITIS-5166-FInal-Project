<%- include('../partials/header.ejs') %>
<main class="container">
          <div>
            <form action='/trades/' method='POST'>
                <div class="mb-3">
                  <label for="category">Category</label>
                  <input type="text" class="form-control" id="category" name="category" placeholder="Enter category" required>
                </div>
                <div class="mb-3">
                    <label for="name">Item Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter item name" required>
                  </div>
                  <div class="mb-3">
                    <label for="manufacturer">Manufacturer</label>
                    <input type="text" class="form-control" id="manufacturer" name="manufacturer" placeholder="Enter manufacturer" required>
                  </div>
                  <div class="mb-3">
                    <label for="description">Description</label>
                    <input type="text" class="form-control" id="description" name="description" placeholder="Enter description" required minlength="10">
                  </div>
                  <button class="btn btn-primary">Create Trade</button>
              </form>
        </div>
</main>
